  <!-- JAVASCRIPT -->
  <script>
    let currentEvent = "";

    function openForm(eventName) {
      const formBox = document.getElementById("regFormBox");

      if (currentEvent === eventName && formBox.style.display === "block") {
        formBox.style.display = "none";
        currentEvent = "";
        return;
      }

      currentEvent = eventName;
      formBox.style.display = "block";

      document.getElementById("eventSelect").value = eventName;
      document.getElementById("formTitle").innerText =
        "üìù Register for " + eventName;

      document.getElementById("register").scrollIntoView({ behavior: "smooth" });
    }

    function showPopup(event) {
      event.preventDefault();

      document.getElementById("popupOverlay").style.display = "block";
      document.getElementById("popupBox").style.display = "block";

      document.getElementById("regForm").reset();
    }

    function closePopup() {
      document.getElementById("popupOverlay").style.display = "none";
      document.getElementById("popupBox").style.display = "none";
    }
  </script>

